{%- comment -%}
Core sitewide JSON-LD: Organization + WebSite + SearchAction
{%- endcomment -%}
{%- assign org_name = "WTF | Welcome To Florida" -%}
{%- assign org_url  = shop.url -%}
{%- assign logo_url = settings.logo | default: shop.brand.logo | default: blank -%}
{%- if logo_url != blank -%}
  {%- assign logo_url = logo_url | image_url: width: 512 -%}
{%- endif -%}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": "{{ shop.secure_url }}/#organization",
  "name": {{ org_name | json }},
  "alternateName": ["WTF Swag", "WTF", "Welcome To Florida", "WTF Cape Coral"],
  "url": {{ org_url | json }},
  {% if logo_url %}"logo": {{ logo_url | json }},{% endif %}
  "brand": {
    "@type": "Brand",
    "@id": "{{ shop.secure_url }}/#brand",
    "name": "WTF | Welcome To Florida"
  },
  "sameAs": [
    "https://www.facebook.com/p/WTF-Welcome-to-Florida-61566655386481/",
    "https://www.instagram.com/wtfswagbrand/",
    "https://www.tiktok.com/@wtf.welcome.to.fl"
    {% if settings.social_instagram != blank %},{{ settings.social_instagram | json }}{% endif %}
    {% if settings.social_tiktok != blank %},{{ settings.social_tiktok | json }}{% endif %}
    {% if settings.social_youtube != blank %},{{ settings.social_youtube | json }}{% endif %}
  ]
}
</script>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": {{ org_name | json }},
  "url": {{ shop.url | json }},
  "potentialAction": {
    "@type": "SearchAction",
    "target": "{{ routes.search_url | absolute_url }}?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
}
</script>
