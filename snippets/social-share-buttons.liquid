{%- comment -%}
  Social Share Buttons with UTM Tracking
  
  Purpose: Add social sharing buttons to product/collection/blog pages
  
  Features:
  - Facebook, Twitter, Pinterest, WhatsApp, Email
  - UTM parameters for tracking
  - Native share API fallback (mobile)
  - Accessible (aria-labels)
  - Lightweight (no external libraries)
  
  Usage: {% render 'social-share-buttons', 
    url: canonical_url, 
    title: page_title,
    image: product.featured_image
  %}
{%- endcomment -%}

{%- liquid
  assign share_url = url | default: canonical_url
  assign share_title = title | default: page_title | url_encode
  assign share_image = image | default: settings.og_default
  
  if share_image.src
    assign share_image_url = share_image | image_url: width: 1200, height: 630
  elsif share_image
    assign share_image_url = share_image | image_url: width: 1200, height: 630
  else
    assign share_image_url = ''
  endif
  
  # Add UTM parameters for tracking
  assign utm_source = 'social'
  assign utm_medium = 'share'
  assign utm_campaign = 'product_share'
  
  assign share_url_with_utm = share_url | append: '?utm_source=' | append: utm_source | append: '&utm_medium=' | append: utm_medium | append: '&utm_campaign=' | append: utm_campaign
-%}

<div class="social-share-buttons">
  <p class="share-label">Share:</p>
  
  <div class="share-buttons-grid">
    {%- comment -%} Facebook {%- endcomment -%}
    <a 
      href="https://www.facebook.com/sharer/sharer.php?u={{ share_url_with_utm | url_encode }}"
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn share-facebook"
      aria-label="Share on Facebook"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
      <span>Facebook</span>
    </a>
    
    {%- comment -%} Twitter/X {%- endcomment -%}
    <a 
      href="https://twitter.com/intent/tweet?url={{ share_url_with_utm | url_encode }}&text={{ share_title }}"
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn share-twitter"
      aria-label="Share on Twitter"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
      </svg>
      <span>Twitter</span>
    </a>
    
    {%- comment -%} Pinterest {%- endcomment -%}
    {%- if share_image_url != '' -%}
    <a 
      href="https://pinterest.com/pin/create/button/?url={{ share_url_with_utm | url_encode }}&media={{ share_image_url | url_encode }}&description={{ share_title }}"
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn share-pinterest"
      aria-label="Share on Pinterest"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.401.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.354-.629-2.758-1.379l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.607 0 11.985-5.365 11.985-11.987C23.97 5.39 18.592.026 11.985.026L12.017 0z"/>
      </svg>
      <span>Pinterest</span>
    </a>
    {%- endif -%}
    
    {%- comment -%} WhatsApp (mobile only) {%- endcomment -%}
    <a 
      href="https://wa.me/?text={{ share_title }}%20{{ share_url_with_utm | url_encode }}"
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn share-whatsapp"
      aria-label="Share on WhatsApp"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
      </svg>
      <span>WhatsApp</span>
    </a>
    
    {%- comment -%} Email {%- endcomment -%}
    <a 
      href="mailto:?subject={{ share_title }}&body=Check%20this%20out:%20{{ share_url_with_utm | url_encode }}"
      class="share-btn share-email"
      aria-label="Share via Email"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
      </svg>
      <span>Email</span>
    </a>
    
    {%- comment -%} Native Share API (mobile) {%- endcomment -%}
    <button 
      class="share-btn share-native"
      aria-label="Share"
      onclick="if(navigator.share){navigator.share({title:'{{ share_title }}',url:'{{ share_url_with_utm }}'}).catch(()=>{});}else{alert('Sharing not supported on this device');}"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z"/>
      </svg>
      <span>Share</span>
    </button>
  </div>
</div>

<style>
  .social-share-buttons {
    margin: 2rem 0;
    padding: 1.5rem;
    background-color: #f9f9f9;
    border-radius: 8px;
  }
  
  .share-label {
    font-weight: 600;
    font-size: 0.95rem;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .share-buttons-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }
  
  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.65rem 1rem;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
    color: white;
  }
  
  .share-btn svg {
    flex-shrink: 0;
  }
  
  .share-btn span {
    white-space: nowrap;
  }
  
  .share-facebook {
    background-color: #1877f2;
  }
  
  .share-facebook:hover {
    background-color: #145dbf;
  }
  
  .share-twitter {
    background-color: #1da1f2;
  }
  
  .share-twitter:hover {
    background-color: #1a8cd8;
  }
  
  .share-pinterest {
    background-color: #e60023;
  }
  
  .share-pinterest:hover {
    background-color: #bd001c;
  }
  
  .share-whatsapp {
    background-color: #25d366;
  }
  
  .share-whatsapp:hover {
    background-color: #1ebe57;
  }
  
  .share-email {
    background-color: #666;
  }
  
  .share-email:hover {
    background-color: #555;
  }
  
  .share-native {
    background-color: #ff6600;
    display: none; /* Show only on mobile via media query */
  }
  
  .share-native:hover {
    background-color: #ff5500;
  }
  
  @media (max-width: 768px) {
    .share-buttons-grid {
      justify-content: center;
    }
    
    .share-btn span {
      display: none; /* Icons only on mobile */
    }
    
    .share-btn {
      padding: 0.75rem;
      justify-content: center;
    }
    
    .share-native {
      display: inline-flex; /* Show native share on mobile */
    }
    
    .share-whatsapp {
      display: inline-flex; /* WhatsApp more relevant on mobile */
    }
  }
  
  @media (min-width: 769px) {
    .share-whatsapp {
      display: none; /* Hide WhatsApp on desktop */
    }
  }
</style>
