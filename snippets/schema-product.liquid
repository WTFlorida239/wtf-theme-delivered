{%- comment -%}
  Product JSON-LD (variant-aware)
  Reads optional review metafields if present:
  - product.metafields.reviews.rating_value
  - product.metafields.reviews.rating_count
{%- endcomment -%}
{%- liquid
  assign currency = shop.currency
  if localization and localization.country and localization.country.currency
    assign currency = localization.country.currency.iso_code
  endif
  assign current_year = 'now' | date: '%Y' | plus: 0
  assign price_valid_until_year = current_year | plus: 1
-%}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": {{ product.title | json }},
    "description": {{ product.description | strip_html | json }},
    "image": [
      {%- for media in product.media -%}
        {%- if media.media_type == 'image' -%}
          {{ media | image_url: width: 1200 | prepend: 'https:' | json }}{%- unless forloop.last -%},{%- endunless -%}
        {%- endif -%}
      {%- endfor -%}
    ],
    "brand": {
      "@type": "Brand",
      "name": {{ shop.name | json }}
    },
    {%- if product.selected_or_first_available_variant.sku != blank -%}
    "sku": {{ product.selected_or_first_available_variant.sku | json }},
    {%- endif -%}
    "offers": [
      {%- for v in product.variants -%}
        {
          "@type": "Offer",
          "url": {{ shop.url | append: product.url | append: '?variant=' | append: v.id | json }},
          "priceCurrency": {{ currency | json }},
          "price": {{ v.price | divided_by: 100.0 | json }},
          "availability": "{% if v.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}",
          "itemCondition": "https://schema.org/NewCondition",
          "seller": {
            "@type": "Organization",
            "name": {{ shop.name | json }}
          }
          {%- if v.compare_at_price and v.compare_at_price > v.price -%}
          ,"priceValidUntil": "{{ price_valid_until_year | append: '-12-31' }}"
          {%- endif -%}
          {%- if v.barcode and v.barcode.size >= 12 and v.barcode.size <= 14 -%}
          ,"gtin13": {{ v.barcode | json }}
          {%- endif -%}
          {%- if v.sku != blank -%}
          ,"sku": {{ v.sku | json }}
          {%- endif -%}
        }{%- unless forloop.last -%},{%- endunless -%}
      {%- endfor -%}
    ]
    {%- assign rating_val = product.metafields.reviews.rating_value -%}
    {%- assign rating_cnt = product.metafields.reviews.rating_count -%}
    {%- if rating_val and rating_cnt and rating_cnt != 0 -%}
    ,"aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": {{ rating_val | json }},
      "reviewCount": {{ rating_cnt | json }}
    }
    {%- endif -%}
  }
</script>
