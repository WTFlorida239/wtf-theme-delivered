{% comment %}
  FAQ Schema Markup
  JSON-LD for frequently asked questions to compete with competitor FAQ visibility
  
  Usage:
  {% render 'faq-schema', faqs: faqs %}
{% endcomment %}

{% liquid
  assign faq_list = shop.metafields.wtf.faq.value | default: blank
  assign page_faqs = page.metafields.wtf.faq.value | default: blank
  
  if page_faqs != blank
    assign faq_list = page_faqs
  endif
%}

{% if faq_list != blank or faq_list == blank %}
