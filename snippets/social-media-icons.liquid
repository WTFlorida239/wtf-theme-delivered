<style>
.social-media-icons {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.social-media-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
  transition: all 0.3s ease;
  border-radius: 50%;
  position: relative;
}

/* Size variations */
.social-media-icons--small .social-media-icon {
  width: 32px;
  height: 32px;
  padding: 6px;
}

.social-media-icons--medium .social-media-icon {
  width: 40px;
  height: 40px;
  padding: 8px;
}

.social-media-icons--large .social-media-icon {
  width: 48px;
  height: 48px;
  padding: 12px;
}

/* Style variations */
.social-media-icons--default .social-media-icon {
  background: #f5f5f5;
  color: #333;
}

.social-media-icons--default .social-media-icon:hover {
  background: #ff6600;
  color: white;
  transform: translateY(-2px);
}

.social-media-icons--footer .social-media-icon {
  background: rgba(255, 255, 255, 0.1);
  color: white;
}

.social-media-icons--footer .social-media-icon:hover {
  background: #ff6600;
  transform: scale(1.1);
}

.social-media-icons--header .social-media-icon {
  background: transparent;
  color: #333;
}

.social-media-icons--header .social-media-icon:hover {
  color: #ff6600;
  transform: scale(1.1);
}

/* Brand-specific colors on hover */
.social-media-icon--facebook:hover {
  background: #1877f2 !important;
}

.social-media-icon--instagram:hover {
  background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%) !important;
}

.social-media-icon--youtube:hover {
  background: #ff0000 !important;
}

.social-media-icon--tiktok:hover {
  background: #000000 !important;
}

.social-media-icon--twitter:hover {
  background: #1da1f2 !important;
}

.social-media-icon--snapchat:hover {
  background: #fffc00 !important;
  color: #000 !important;
}

.social-media-icon--reddit:hover {
  background: #ff4500 !important;
}

.social-media-icon--lemon8:hover {
  background: #ffd700 !important;
  color: #000 !important;
}

.social-media-icon--google:hover {
  background: #4285f4 !important;
}

/* Labels */
.social-media-label {
  margin-left: 0.5rem;
  font-size: 0.9rem;
  font-weight: 500;
}

.social-media-icons--small .social-media-label {
  font-size: 0.8rem;
}

.social-media-icons--large .social-media-label {
  font-size: 1rem;
}

/* Responsive */
@media (max-width: 768px) {
  .social-media-icons {
    gap: 0.75rem;
  }
  
  .social-media-icons--medium .social-media-icon {
    width: 36px;
    height: 36px;
    padding: 6px;
  }
  
  .social-media-icons--large .social-media-icon {
    width: 40px;
    height: 40px;
    padding: 8px;
  }
}
</style>
