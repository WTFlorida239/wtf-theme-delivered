{% comment %}
  Social Media Icons Snippet
  Renders social media icons with proper linking
  
  Usage:
  {% render 'social-media-icons' %}
  {% render 'social-media-icons', style: 'footer' %}
  {% render 'social-media-icons', style: 'header', size: 'small' %}
{% endcomment %}

{% liquid
  assign style = style | default: 'default'
  assign size = size | default: 'medium'
  assign show_labels = show_labels | default: false
  
  assign social_links = settings.social_links | default: blank
  assign facebook_url = settings.social_facebook_link | default: blank
  assign instagram_url = settings.social_instagram_link | default: blank
  assign youtube_url = settings.social_youtube_link | default: blank
  assign tiktok_url = settings.social_tiktok_link | default: blank
  assign twitter_url = settings.social_twitter_link | default: blank
  assign snapchat_url = settings.social_snapchat_link | default: blank
  assign reddit_url = settings.social_reddit_link | default: blank
  assign lemon8_url = settings.social_lemon8_link | default: blank
  assign google_url = settings.social_google_link | default: blank
%}

