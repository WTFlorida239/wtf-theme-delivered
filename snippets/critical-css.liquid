{%- comment -%}
  Critical CSS - Above-the-fold styles for faster FCP/LCP
  
  Purpose: Inline critical CSS to prevent render-blocking
  
  Contents:
  - Layout basics (grid, flexbox)
  - Header/navigation styles
  - Hero section styles
  - Font declarations (subset)
  - Age gate modal (prevents CLS)
  
  Size: ~8KB (within 14KB recommendation)
  
  Usage: <style>{% render 'critical-css' %}</style>
{%- endcomment -%}

/* === CSS Reset & Box Sizing === */
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* === Root Variables === */
:root {
  --color-primary: #ff6600;
  --color-secondary: #00cc99;
  --color-text: #1a1a1a;
  --color-bg: #ffffff;
  --color-border: #e5e5e5;
  --font-body: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-heading: 'Inter', sans-serif;
  --spacing-xs: 0.5rem;
  --spacing-sm: 1rem;
  --spacing-md: 1.5rem;
  --spacing-lg: 2rem;
  --spacing-xl: 3rem;
}

/* === Base Styles === */
html {
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: var(--font-body);
  color: var(--color-text);
  background-color: var(--color-bg);
  line-height: 1.6;
  overflow-x: hidden;
}

/* === Layout Grid === */
.container {
  width: 100%;
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 var(--spacing-md);
}

.grid {
  display: grid;
  gap: var(--spacing-md);
}

.flex {
  display: flex;
  gap: var(--spacing-md);
}

/* === Header/Navigation === */
header {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: var(--color-bg);
  border-bottom: 1px solid var(--color-border);
  padding: var(--spacing-sm) 0;
}

.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo {
  display: flex;
  align-items: center;
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--color-primary);
  text-decoration: none;
}

.logo img {
  width: 60px;
  height: 60px;
  object-fit: contain;
}

nav ul {
  display: flex;
  list-style: none;
  gap: var(--spacing-md);
}

nav a {
  color: var(--color-text);
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s;
}

nav a:hover {
  color: var(--color-primary);
}

/* === Hero Section === */
.hero {
  position: relative;
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: var(--spacing-xl) var(--spacing-md);
  background: linear-gradient(135deg, #ff6600 0%, #ff9933 100%);
  color: white;
}

.hero h1 {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 900;
  line-height: 1.2;
  margin-bottom: var(--spacing-md);
}

.hero p {
  font-size: clamp(1rem, 2vw, 1.25rem);
  margin-bottom: var(--spacing-lg);
  opacity: 0.95;
}

/* === Buttons === */
.btn {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  font-weight: 600;
  text-align: center;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.2s;
  cursor: pointer;
  border: none;
}

.btn-primary {
  background-color: var(--color-primary);
  color: white;
}

.btn-primary:hover {
  background-color: #ff5500;
  transform: translateY(-2px);
}

.btn-secondary {
  background-color: transparent;
  color: var(--color-primary);
  border: 2px solid var(--color-primary);
}

.btn-secondary:hover {
  background-color: var(--color-primary);
  color: white;
}

/* === Age Gate Modal (CLS Prevention) === */
.age-gate-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 1;
  visibility: visible;
  transition: opacity 0.3s, visibility 0.3s;
}

.age-gate-modal.hidden {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
}

.age-gate-content {
  background-color: white;
  padding: var(--spacing-xl);
  border-radius: 8px;
  max-width: 500px;
  width: 90%;
  text-align: center;
}

.age-gate-content h2 {
  font-size: 2rem;
  margin-bottom: var(--spacing-md);
  color: var(--color-primary);
}

.age-gate-content p {
  margin-bottom: var(--spacing-lg);
  line-height: 1.6;
}

.age-gate-buttons {
  display: flex;
  gap: var(--spacing-md);
  justify-content: center;
}

/* === Typography === */
h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-heading);
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: var(--spacing-sm);
}

h1 { font-size: clamp(2rem, 5vw, 3rem); }
h2 { font-size: clamp(1.5rem, 4vw, 2.25rem); }
h3 { font-size: clamp(1.25rem, 3vw, 1.75rem); }

p {
  margin-bottom: var(--spacing-sm);
}

a {
  color: var(--color-primary);
  transition: color 0.2s;
}

a:hover {
  color: #ff5500;
}

/* === Utility Classes === */
.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.mt-0 { margin-top: 0; }
.mt-sm { margin-top: var(--spacing-sm); }
.mt-md { margin-top: var(--spacing-md); }
.mt-lg { margin-top: var(--spacing-lg); }

.mb-0 { margin-bottom: 0; }
.mb-sm { margin-bottom: var(--spacing-sm); }
.mb-md { margin-bottom: var(--spacing-md); }
.mb-lg { margin-bottom: var(--spacing-lg); }

/* === Mobile Responsive === */
@media (max-width: 768px) {
  :root {
    --spacing-xs: 0.375rem;
    --spacing-sm: 0.75rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
  }
  
  .container {
    padding: 0 var(--spacing-sm);
  }
  
  nav ul {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .hero {
    min-height: 50vh;
    padding: var(--spacing-lg) var(--spacing-sm);
  }
  
  .age-gate-content {
    padding: var(--spacing-lg);
  }
  
  .age-gate-buttons {
    flex-direction: column;
  }
}

/* === Font Loading (swap to prevent FOIT) === */
@font-face {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  src: local('Inter'), local('Inter-Regular');
}

@font-face {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 700;
  font-display: swap;
  src: local('Inter Bold'), local('Inter-Bold');
}
