{% comment %}
  Service-Specific Page Schema
  For kava, kratom, THC landing pages
  
  Usage: {% render 'service-page-schema', service_type: 'kava' %}
{% endcomment %}

{% liquid
  assign service_name = ''
  assign service_description = ''
  assign service_keywords = ''
  assign price_range = ''
  
  case service_type
    when 'kava', 'kava-drinks'
      assign service_name = 'Custom Kava Drinks'
      assign service_description = 'Traditional and custom kava beverages expertly prepared in Cape Coral, FL. Choose your size, strength, and flavor combinations. Serving the best kava drinks in Southwest Florida since 2024.'
      assign service_keywords = 'kava bar cape coral, kava drinks cape coral, custom kava, kava lounge, traditional kava, kava bar fort myers, kava southwest florida, best kava cape coral'
      assign price_range = '$9-$100'
    when 'kratom', 'kratom-teas'
      assign service_name = 'Premium Kratom Teas'
      assign service_description = 'Premium kratom teas with your choice of strain (green, red, white, yellow) and extensive flavor options in Cape Coral, FL. Serving Southwest Florida with the finest kratom selection.'
      assign service_keywords = 'kratom tea cape coral, kratom fort myers, kratom southwest florida, kratom bar, green kratom, red kratom, white kratom, kratom drinks florida'
      assign price_range = '$9-$100'
    when 'thc', 'thc-drinks', 'delta-9'
      assign service_name = 'Delta-9 THC Beverages'
      assign service_description = 'Lab-tested Delta-9 THC drinks, shots, and syrups in Cape Coral, FL. Legal, licensed, and 21+ only. Wide selection of hemp-derived THC beverages with precise dosing.'
      assign service_keywords = 'thc drinks cape coral, delta 9 beverages florida, thc shots, hemp drinks, legal thc cape coral, delta 9 fort myers, thc syrup southwest florida'
      assign price_range = '$5-$25'
    when 'edibles', 'thc-edibles'
      assign service_name = 'THC Edibles'
      assign service_description = 'Premium THC edibles including gummies, cookies, brownies, and cereal bars in Cape Coral, FL. Lab-tested, precisely dosed, 21+ only. Serving Southwest Florida with quality hemp-derived edibles.'
      assign service_keywords = 'thc edibles cape coral, delta 9 gummies, thc cookies, edibles fort myers, hemp edibles florida, legal thc edibles swfl'
      assign price_range = '$15-$30'
    when 'canned-drinks'
      assign service_name = 'Canned THC & Botanical Drinks'
      assign service_description = 'Ready-to-drink canned THC beverages and botanical drinks in Cape Coral, FL. Convenient, portable, and perfectly dosed. Take your favorite drinks on the go.'
      assign service_keywords = 'canned thc drinks cape coral, ready to drink thc, canned kava, canned kratom, portable thc drinks florida'
      assign price_range = '$5-$15'
    when 'draft-pours'
      assign service_name = 'Draft Pours & Specialty Drinks'
      assign service_description = 'Rotating selection of draft pours and specialty botanical beverages in Cape Coral, FL. Unique, limited-edition drinks you can\'t find anywhere else in Southwest Florida.'
      assign service_keywords = 'draft kava cape coral, specialty drinks fort myers, unique beverages swfl, craft drinks cape coral'
      assign price_range = '$12-$20'
  endcase
%}

