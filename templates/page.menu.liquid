  }

  .menu-category__header {
    margin-bottom: 2rem;
  }

  .menu-category__title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #ff6b35;
  }

  .menu-category__description {
    font-size: 1.2rem;
    line-height: 1.7;
    color: #555;
  }

  .menu-items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .menu-item {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid #ff6b35;
  }

  .menu-item__name {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #333;
  }

  .menu-item__description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
    margin-bottom: 1rem;
  }

  .menu-item__compliance {
    font-size: 0.9rem;
    font-weight: bold;
    color: #ff6b35;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .menu-cta {
    background: #f0f0f0;
    padding: 4rem 2rem;
    text-align: center;
    margin-top: 4rem;
  }

  .menu-cta__title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #333;
  }

  .menu-cta__description {
    font-size: 1.2rem;
    line-height: 1.7;
    color: #555;
    margin-bottom: 2rem;
  }

  .menu-cta__buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .button {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.1rem;
  }

  .button--primary {
    background: #ff6b35;
    color: white;
  }

  .button--secondary {
    background: #333;
    color: white;
  }

  .button--tertiary {
    background: white;
    color: #ff6b35;
    border: 2px solid #ff6b35;
  }

  .button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    transition: all 0.2s;
  }

  @media (max-width: 768px) {
    .menu-hero__title {
      font-size: 2rem;
    }

    .menu-category__title {
      font-size: 2rem;
    }

    .menu-items {
      grid-template-columns: 1fr;
    }

    .menu-cta__buttons {
      flex-direction: column;
    }
  }
</style>

