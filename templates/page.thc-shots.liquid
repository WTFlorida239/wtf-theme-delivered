{% comment %}
  THC Shots Builder - Same 4 Rotating Flavors as THC Drinks
{% endcomment %}

{% assign thc_flavors = 'Coconut,Pineapple,Mango,Passion Fruit,Vanilla,Chocolate,Strawberry,Blueberry,Lime,Lemon,Orange,Mint,Ginger,Cinnamon,Caramel,Tropical Mango,Berry Blast,Citrus Punch,Grape Escape,Peach,Watermelon,Cherry' | split: ',' %}

<div class="thc-shots-builder" style="max-width: 1200px; margin: 0 auto; padding: 2rem;">
  <header style="text-align: center; margin-bottom: 4rem;">
    <a href="{{ routes.root_url }}" style="display: inline-block; margin-bottom: 2rem; padding: 1rem 2rem; border-radius: 2.5rem; border: 2px solid #ff6600; color: #ff6600; text-decoration: none; font-weight: 700;">‚Üê Back to Menu</a>
    <h1 style="font-size: 4rem; font-weight: 900; color: #1a1a1a; margin-bottom: 1rem;">THC Shots</h1>
    <p style="font-size: 1.8rem; color: #4a4a4a;">Fast-acting concentrated cannabis shots</p>
  </header>

  <form class="drink-customizer" style="background: #fff; border-radius: 2rem; padding: 4rem; box-shadow: 0 8px 32px rgba(0,0,0,0.1);">
    
    <!-- Comprehensive Flavor Selection matching THC Drinks -->
    <div class="customizer-section" style="margin-bottom: 4rem;">
      <h3 style="font-size: 2.4rem; font-weight: 700; color: #1a1a1a; margin-bottom: 2rem; text-align: center;">Choose Your Flavor</h3>
      <div id="thc-shots-flavors">
        <!-- Flavors will be populated by JavaScript with categorized display -->
      </div>
      
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const flavorContainer = document.getElementById('thc-shots-flavors');
          
          // Same categorized flavor list as THC drinks
          const flavorCategories = {
            'Tropical': ['Coconut', 'Pineapple', 'Mango', 'Passion Fruit', 'Tropical Mango'],
            'Citrus': ['Lime', 'Lemon', 'Orange', 'Citrus Punch'],
            'Berry': ['Strawberry', 'Blueberry', 'Berry Blast', 'Cherry', 'Watermelon'],
            'Classic': ['Vanilla', 'Chocolate', 'Caramel', 'Mint'],
            'Specialty': ['Ginger', 'Cinnamon', 'Peach', 'Grape Escape']
          };
          
          flavorContainer.innerHTML = '';
          
          Object.entries(flavorCategories).forEach(([category, flavors]) => {
            const categoryDiv = document.createElement('div');
            categoryDiv.style.marginBottom = '3rem';
            categoryDiv.innerHTML = `<h4 style="font-size: 1.8rem; font-weight: 700; color: #333; margin-bottom: 1.5rem; text-align: center; padding: 1rem; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); border-radius: 1.5rem; border: 2px solid #dee2e6;">${category}</h4>`;
            
            const categoryGrid = document.createElement('div');
            categoryGrid.style.display = 'grid';
            categoryGrid.style.gridTemplateColumns = 'repeat(auto-fit, minmax(20rem, 1fr))';
            categoryGrid.style.gap = '1.5rem';
            
            flavors.forEach((flavor, index) => {
              const label = document.createElement('label');
              label.className = 'thc-flavor-option';
              label.style.cursor = 'pointer';
              
              const isFirst = category === 'Tropical' && index === 0;
              
              label.innerHTML = `
                <input type="radio" name="thc_flavor" value="${flavor}" ${isFirst ? 'checked' : ''} style="display: none;">
                <div style="background: linear-gradient(135deg, #e91e63 0%, #f06292 100%); color: #fff; padding: 2rem; border-radius: 1.6rem; text-align: center; transition: all 0.3s ease; border: 3px solid transparent;">
                  <div style="font-size: 2.5rem; margin-bottom: 1rem;">üíâ</div>
                  <h4 style="font-size: 1.6rem; font-weight: 700; margin-bottom: 1rem;">${flavor}</h4>
                  <p style="opacity: 0.9; font-size: 1.2rem;">25mg THC ‚Ä¢ Fast acting</p>
                </div>
              `;
              
              categoryGrid.appendChild(label);
            });
            
            categoryDiv.appendChild(categoryGrid);
            flavorContainer.appendChild(categoryDiv);
          });
        });
      </script>
      <div style="text-align: center; margin-top: 2rem;">
        <p style="font-size: 1.4rem; color: #666; font-style: italic;">Same comprehensive flavor selection as our THC drinks and kava beverages</p>
      </div>
    </div>

    <!-- Dosage Selection -->
    <div class="customizer-section" style="margin-bottom: 4rem;">
      <h3 style="font-size: 2.4rem; font-weight: 700; color: #1a1a1a; margin-bottom: 2rem; text-align: center;">Select Dosage</h3>
      <div style="display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap;">
        <label class="dosage-option" style="cursor: pointer;">
          <input type="radio" name="dosage" value="2.5mg THC" style="display: none;">
          <div style="background: #f8f9fa; border: 3px solid #e9ecef; padding: 2rem 3rem; border-radius: 1.6rem; text-align: center;">
            <h4 style="font-size: 1.8rem; font-weight: 700;">2.5mg</h4>
            <p style="color: #666;">Micro dose - $8.00</p>
          </div>
        </label>
        <label class="dosage-option" style="cursor: pointer;">
          <input type="radio" name="dosage" value="5mg THC" style="display: none;">
          <div style="background: #f8f9fa; border: 3px solid #e9ecef; padding: 2rem 3rem; border-radius: 1.6rem; text-align: center;">
            <h4 style="font-size: 1.8rem; font-weight: 700;">5mg</h4>
            <p style="color: #666;">Low dose - $12.00</p>
          </div>
        </label>
        <label class="dosage-option" style="cursor: pointer;">
          <input type="radio" name="dosage" value="25mg THC" style="display: none;" checked>
          <div style="background: #f8f9fa; border: 3px solid #e9ecef; padding: 2rem 3rem; border-radius: 1.6rem; text-align: center;">
            <h4 style="font-size: 1.8rem; font-weight: 700;">25mg</h4>
            <p style="color: #666;">Fast acting - $18.00</p>
          </div>
        </label>
      </div>
    </div>

    <!-- Comments Section -->
    <div class="customizer-section" style="margin-bottom: 4rem;">
      <h3 style="font-size: 2.4rem; font-weight: 700; color: #1a1a1a; margin-bottom: 2rem; text-align: center;">Special Instructions</h3>
      <textarea name="comments" placeholder="Any special requests or modifications..." style="width: 100%; min-height: 12rem; padding: 2rem; border: 2px solid #e9ecef; border-radius: 1.2rem; font-size: 1.5rem; resize: vertical; font-family: inherit;"></textarea>
    </div>

    <!-- Order Button -->
    <div style="background: linear-gradient(135deg, #e91e63 0%, #f06292 100%); border-radius: 2rem; padding: 4rem; text-align: center; color: #fff;">
      <h3 style="font-size: 2.8rem; font-weight: 900; margin-bottom: 2rem;">Ready to Order?</h3>
      <p style="font-size: 1.8rem; margin-bottom: 3rem;">Must be 21+ with valid ID</p>
      <a href="tel:(239) 955-0314" style="display: inline-flex; align-items: center; justify-content: center; padding: 2rem 4rem; background: #fff; color: #e91e63; text-decoration: none; border-radius: 2.4rem; font-weight: 700; font-size: 1.8rem;">üìû Call (239) 955-0314</a>
    </div>
  </form>
</div>
