{%- comment -%} Reset password template. {%- endcomment -%}
<main id="MainContent" class="page-width" role="main">
  <section class="customer-form">
    <h1>Reset your password</h1>
    {% form 'reset_customer_password' %}
      {% if form.errors %}
        <div class="form-errors">{{ form.errors | default_errors }}</div>
      {% endif %}
      <div class="field">
        <label for="ResetPassword">Password</label>
        <input type="password" id="ResetPassword" name="customer[password]" autocomplete="new-password" required>
      </div>
      <div class="field">
        <label for="ResetPasswordConfirmation">Confirm password</label>
        <input type="password" id="ResetPasswordConfirmation" name="customer[password_confirmation]" autocomplete="new-password" required>
      </div>
      <button type="submit" class="button">Reset password</button>
    {% endform %}
  </section>
</main>
