<div class="home-footer-blurb color-background-1 gradient">
  <div class="page-width">
    <div class="home-footer-blurb__container">
      {%- if section.settings.eyebrow != blank -%}
        <span class="home-footer-blurb__eyebrow">{{ section.settings.eyebrow | escape }}</span>
      {%- endif -%}
      
      {%- if section.settings.heading != blank -%}
        <h2 class="home-footer-blurb__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}
      
      {%- if section.settings.body != blank -%}
        <div class="home-footer-blurb__body">
          {{ section.settings.body }}
        </div>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="home-footer-blurb__button button button--primary">
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .home-footer-blurb {
    padding: var(--spacing-sections-mobile) 0;
  }

  @media screen and (min-width: 750px) {
    .home-footer-blurb {
      padding: var(--spacing-sections-desktop) 0;
    }
  }

  .home-footer-blurb__container {
    text-align: center;
    max-width: 80rem;
    margin: 0 auto;
  }

  .home-footer-blurb__eyebrow {
    display: inline-block;
    font-size: 1.4rem;
    font-weight: 500;
    color: rgb(var(--color-base-accent-1));
    text-transform: uppercase;
    letter-spacing: 0.1rem;
    margin-bottom: 1.6rem;
  }

  .home-footer-blurb__heading {
    font-size: 3.2rem;
    font-weight: 700;
    margin-bottom: 2.4rem;
    color: rgb(var(--color-base-text));
    line-height: 1.2;
  }

  @media screen and (min-width: 750px) {
    .home-footer-blurb__heading {
      font-size: 4.8rem;
    }
  }

  .home-footer-blurb__body {
    font-size: 1.8rem;
    color: rgba(var(--color-base-text), 0.7);
    margin-bottom: 3.2rem;
    line-height: 1.5;
  }

  .home-footer-blurb__body p {
    margin: 0;
  }

  .home-footer-blurb__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.6rem 3.2rem;
    font-size: 1.6rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 1.2rem;
    transition: all 0.2s ease;
    background: rgb(var(--color-base-accent-1));
    color: rgb(var(--color-base-solid-button-labels));
    border: 2px solid rgb(var(--color-base-accent-1));
  }

  .home-footer-blurb__button:hover {
    background: transparent;
    color: rgb(var(--color-base-accent-1));
    transform: translateY(-2px);
  }

  @media screen and (min-width: 750px) {
    .home-footer-blurb__button {
      padding: 2rem 4rem;
      font-size: 1.8rem;
    }
  }
</style>

{% schema %}
{
  "name": "Home Footer Blurb",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Stay late, vibe longer"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Handcrafted botanicals poured fresh nightly"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body text",
      "default": "<p>We craft small-batch kava, kratom, THC beverages, and alcohol-free elixirs that keep Cape Coral relaxed. Grab your go-to drink for pickup, or slide into the lounge for nightly specials and community events.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Plan your visit"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Home Footer Blurb"
    }
  ]
}
{% endschema %}
