  .perks-signup__title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
  }

  .perks-signup__description {
    font-size: 1.125rem;
    margin: 0 0 2rem 0;
    opacity: 0.9;
    line-height: 1.6;
  }

  .perks-signup__btn {
    background: white;
    color: #3b82f6;
    border: none;
