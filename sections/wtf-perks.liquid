<style>
  .wtf-perks {
    padding: 4rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  }

  .wtf-perks__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .wtf-perks__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .wtf-perks__title {
    font-size: 3rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 1rem 0;
  }

  .wtf-perks__description {
    font-size: 1.25rem;
    color: #6b7280;
    margin: 0;
    max-width: 600px;
    margin: 0 auto;
  }

  .perks-tiers,
  .perks-points,
  .perks-special {
    margin-bottom: 4rem;
  }

  .perks-tiers__title,
  .perks-points__title,
  .perks-special__title {
    font-size: 2rem;
    font-weight: 600;
    color: #1f2937;
    text-align: center;
    margin: 0 0 2rem 0;
  }

  .perks-tiers__grid {
