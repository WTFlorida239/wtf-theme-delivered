{% comment %}
  Events Calendar Section
  Displays upcoming WTF events with structured data
  Includes competitor event tracking and counterprogramming
{% endcomment %}

<section class="events-calendar" data-section-id="{{ section.id }}" aria-labelledby="events-title">
  <div class="events-calendar__container">
    <div class="events-calendar__header">
      <h2 id="events-title" class="events-calendar__title">
        {{ section.settings.title | default: 'Upcoming Events at WTF' }}
      </h2>
      {% if section.settings.description != blank %}
        <p class="events-calendar__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <div class="events-calendar__content">
      <!-- Event Categories Filter -->
      <div class="events-filter" role="tablist" aria-label="Event categories">
        <button type="button" 
                class="events-filter__btn events-filter__btn--active" 
                data-filter="all"
                role="tab"
                aria-selected="true"
                aria-controls="events-all">
          All Events
        </button>
        <button type="button" 
                class="events-filter__btn" 
                data-filter="educational"
                role="tab"
                aria-selected="false"
                aria-controls="events-educational">
          Educational
        </button>
        <button type="button" 
                class="events-filter__btn" 
                data-filter="social"
                role="tab"
                aria-selected="false"
                aria-controls="events-social">
          Social
        </button>
        <button type="button" 
                class="events-filter__btn" 
                data-filter="special"
                role="tab"
                aria-selected="false"
                aria-controls="events-special">
          Special Events
        </button>
      </div>

      <!-- Events Grid -->
      <div class="events-grid" id="events-container" role="tabpanel">
        
        <!-- Kava Education Workshop -->
        <article class="event-card" data-category="educational" data-event-id="kava-workshop-2024">
          <div class="event-card__image">
            <img src="{{ 'event-kava-workshop.jpg' | asset_url }}" 
                 alt="Kava Education Workshop at WTF" 
                 width="400" 
                 height="250"
                 loading="lazy">
            <div class="event-card__date-badge">
              <span class="event-date__month">JAN</span>
              <span class="event-date__day">15</span>
            </div>
          </div>
          <div class="event-card__content">
            <div class="event-card__meta">
              <span class="event-card__category">Educational</span>
              <time class="event-card__time" datetime="2024-01-15T19:00">7:00 PM</time>
            </div>
            <h3 class="event-card__title">Kava 101: Origins, Effects & Preparation</h3>
            <p class="event-card__description">
              Learn about the rich history of kava, its traditional preparation methods, and how to identify quality kava. Perfect for beginners and enthusiasts alike.
            </p>
            <div class="event-card__details">
              <div class="event-detail">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <span>WTF Lounge</span>
              </div>
              <div class="event-detail">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="8.5" cy="7" r="4"></circle>
                  <path d="M20 8v6"></path>
                  <path d="M23 11h-6"></path>
                </svg>
                <span>20 spots available</span>
              </div>
            </div>
            <button type="button" class="event-card__rsvp" data-event-rsvp="kava-workshop-2024">
              RSVP Free
            </button>
          </div>
        </article>

        <!-- Game Night -->
        <article class="event-card" data-category="social" data-event-id="game-night-weekly">
          <div class="event-card__image">
            <img src="{{ 'event-game-night.jpg' | asset_url }}" 
                 alt="Weekly Game Night at WTF" 
                 width="400" 
                 height="250"
                 loading="lazy">
            <div class="event-card__date-badge event-card__date-badge--recurring">
              <span class="event-date__month">EVERY</span>
              <span class="event-date__day">FRI</span>
            </div>
          </div>
          <div class="event-card__content">
            <div class="event-card__meta">
              <span class="event-card__category">Social</span>
              <time class="event-card__time" datetime="19:00">7:00 PM - 10:00 PM</time>
            </div>
            <h3 class="event-card__title">Friday Night Game Tournament</h3>
            <p class="event-card__description">
              Join us every Friday for board games, card games, and friendly competition. Prizes for winners, fun for everyone. Bring friends or make new ones!
            </p>
            <div class="event-card__details">
              <div class="event-detail">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
