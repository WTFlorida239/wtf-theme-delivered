  }

  .event-card__date-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: #3b82f6;
    color: white;
    padding: 0.5rem;
    border-radius: 8px;
    text-align: center;
    min-width: 60px;
  }

  .event-card__date-badge--recurring {
