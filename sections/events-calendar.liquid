      <!-- Event Calendar Widget -->
      <div class="events-calendar-widget">
        <h3 class="events-calendar-widget__title">Full Event Calendar</h3>
        <div class="events-calendar-widget__embed">
          <!-- This would integrate with Google Calendar or similar -->
          <iframe src="https://calendar.google.com/calendar/embed?src=wtfswag%40gmail.com&ctz=America%2FNew_York" 
