<style>
  .events-calendar {
    padding: 4rem 0;
    background: #f8fafc;
  }

  .events-calendar__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .events-calendar__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .events-calendar__title {
    font-size: 3rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 1rem 0;
  }

  .events-calendar__description {
    font-size: 1.25rem;
    color: #6b7280;
    margin: 0;
    max-width: 600px;
    margin: 0 auto;
  }

  .events-filter {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .events-filter__btn {
    background: white;
    border: 2px solid #e5e7eb;
    color: #6b7280;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .events-filter__btn:hover,
  .events-filter__btn--active {
    background: #3b82f6;
    border-color: #3b82f6;
    color: white;
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .event-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .event-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .event-card__image {
    position: relative;
    overflow: hidden;
  }

  .event-card__image img {
    width: 100%;
