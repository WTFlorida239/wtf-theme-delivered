{% comment %}
  Footer Section - WTF Theme
  Basic footer with contact info and links
{% endcomment %}

<footer class="footer">
  <div class="page-width">
    <div class="footer__content">
      <div class="footer__section footer__section--branding">
        <div class="footer__branding">
          <img src="{{ 'WTFLogo.png' | asset_url }}" 
               alt="{{ shop.name }}"
               class="footer__logo"
               width="80"
               height="80">
          <div class="footer__brand-text">
            <h3 class="footer__heading">{{ section.settings.heading | default: 'WTF | Welcome To Florida' }}</h3>
            <p class="footer__text">{{ section.settings.description | default: 'Cape Coral\'s Premier Kava Bar' }}</p>
          </div>
        </div>
      </div>

      <div class="footer__section">
        <h4 class="footer__subheading">Contact</h4>
        <p class="footer__text">
          {{ section.settings.address | default: '1520 SE 46th Ln, Unit B, Cape Coral, FL 33904' }}<br>
          <a href="tel:{{ section.settings.phone | default: '(239) 955-0314' }}">{{ section.settings.phone | default: '(239) 955-0314' }}</a><br>
          <a href="mailto:{{ section.settings.email | default: 'info@wtfswag.com' }}">{{ section.settings.email | default: 'info@wtfswag.com' }}</a>
        </p>
      </div>

      <div class="footer__section">
        <h4 class="footer__subheading">Hours</h4>
        <p class="footer__text">{{ section.settings.hours | default: 'Daily 8amâ€“10pm' }}</p>
      </div>

      {% if section.blocks.size > 0 %}
        <div class="footer__section">
          <h4 class="footer__subheading">Follow Us</h4>
          <div class="footer__social">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'social_link' %}
                  <a href="{{ block.settings.url }}" class="footer__social-link" {{ block.shopify_attributes }}>
                    {{ block.settings.label }}
                  </a>
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #f8f8f8;
    padding: 4rem 0 2rem;
    margin-top: 4rem;
  }

  .footer__content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer__heading {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #333;
  }

  .footer__subheading {
    font-size: 1.4rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #333;
  }

  .footer__text {
    color: #666;
    line-height: 1.6;
  }

  .footer__text a {
    color: #ff6900;
    text-decoration: none;
  }

  .footer__text a:hover {
    text-decoration: underline;
  }

  .footer__social {
    display: flex;
    gap: 1rem;
  }

  .footer__social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    background: #ff6900;
    color: white;
    text-decoration: none;
    border-radius: 50%;
    font-size: 1.5rem;
    transition: background 0.3s ease;
  }

  .footer__social-link:hover {
    background: #e55a00;
  }

  .footer__bottom {
    border-top: 1px solid #ddd;
    padding-top: 2rem;
    text-align: center;
  }

  .footer__copyright {
    color: #666;
    font-size: 1.4rem;
  }

  @media (max-width: 768px) {
    .footer__content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>

