{% comment %}
  Footer Section - WTF Theme
  Basic footer with contact info and links
{% endcomment %}

<footer class="footer">
  <div class="page-width">
    <div class="footer__content">
      <div class="footer__section footer__section--branding">
        <div class="footer__branding">
          <img src="{{ 'WTFLogo.png' | asset_url }}" 
               alt="{{ shop.name }}"
               class="footer__logo"
               width="80"
               height="80">
          <div class="footer__brand-text">
            <h3 class="footer__heading">{{ section.settings.heading | default: 'WTF | Welcome To Florida' }}</h3>
            <p class="footer__text">{{ section.settings.description | default: 'Cape Coral\'s Premier Kava Bar' }}</p>
          </div>
        </div>
      </div>

      <div class="footer__section">
        <h4 class="footer__subheading">Contact</h4>
        <p class="footer__text">
          {{ section.settings.address | default: '1520 SE 46th Ln, Unit B, Cape Coral, FL 33904' }}<br>
          <a href="tel:{{ section.settings.phone | default: '(239) 955-0314' }}">{{ section.settings.phone | default: '(239) 955-0314' }}</a><br>
          <a href="mailto:{{ section.settings.email | default: 'info@wtfswag.com' }}">{{ section.settings.email | default: 'info@wtfswag.com' }}</a>
        </p>
      </div>

      <div class="footer__section">
        <h4 class="footer__subheading">Hours</h4>
        <p class="footer__text">{{ section.settings.hours | default: 'Daily 8am–10pm' }}</p>
      </div>

      <div class="footer__section">
        <h4 class="footer__subheading">Follow Us</h4>
        <div class="footer__social">
          {% render 'social-media-icons', style: 'footer', size: 'medium' %}
        </div>
      </div>
    </div>

  <div class="footer__bottom">
    <p class="footer__copyright">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
    </p>
  </div>

  {%- render 'local-citations' -%}
</div>
</footer>

<style>
  .footer {
    background: #f8f8f8;
    padding: 4rem 0 2rem;
    margin-top: 4rem;
  }

  .footer__content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer__section {
    max-width: 400px;
  }

  .footer__heading {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #333;
  }

  .footer__subheading {
    font-size: 1.4rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #333;
  }

  .footer__text {
    color: #666;
    line-height: 1.6;
  }

  .footer__text a {
    color: #ff6900;
    text-decoration: none;
  }

  .footer__text a:hover {
    text-decoration: underline;
  }

  .footer__branding {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer__logo {
    flex-shrink: 0;
    aspect-ratio: 1;
    height: auto;
  }

  .footer__social {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer__social a {
    display: inline-block;
    padding: 0.5rem;
    background: #ff6900;
    color: white;
    border-radius: 50%;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .footer__social a:hover {
    background: #e55a00;
  }

  .footer__bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid #ddd;
  }

  .footer__copyright {
    color: #666;
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 2rem 0 1rem;
    }

    .footer__content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer__branding {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }

    .footer__heading {
      font-size: 1.5rem;
    }

    .footer__subheading {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: 1.5rem 0 1rem;
    }

    .footer__content {
      gap: 1.5rem;
    }

    .footer__heading {
      font-size: 1.8rem;
    }

    .footer__subheading {
      font-size: 1.1rem;
    }

    .footer__text {
      font-size: 0.95rem;
    }

    .footer__logo {
      width: 60px;
      height: 60px;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "WTF | Welcome To Florida"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Cape Coral's Premier Kava Bar"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "1520 SE 46th Ln, Unit B, Cape Coral, FL 33904"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "(239) 955-0314"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@wtfswag.com"
    },
    {
      "type": "text",
      "id": "hours",
      "label": "Hours",
      "default": "Daily 8am–10pm"
    }
  ]
}
{% endschema %}
