{% comment %}
  Locations Section for WTF Theme
  Displays store locations with hours, contact info, and directions
{% endcomment %}

<div class="locations-section" data-section-id="{{ section.id }}">
  <div class="locations-container">
    <div class="locations-header">
      <h1 class="locations-title">{{ section.settings.title | default: 'Our Locations' }}</h1>
      {% if section.settings.description != blank %}
        <p class="locations-description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <div class="locations-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'location' %}
            <div class="location-card" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="location-card__image">
                  <img src="{{ block.settings.image | image_url: width: 400 }}" 
                       alt="{{ block.settings.name }}"
                       loading="lazy"
                       width="400"
                       height="300">
                </div>
              {% endif %}

              <div class="location-card__content">
                <h3 class="location-card__name">{{ block.settings.name }}</h3>
                
                {% if block.settings.address != blank %}
                  <div class="location-card__address">
                    <svg class="location-card__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                      <circle cx="12" cy="10" r="3"/>
                    </svg>
                    <span>{{ block.settings.address }}</span>
                  </div>
                {% endif %}

                {% if block.settings.phone != blank %}
                  <div class="location-card__phone">
                    <svg class="location-card__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                    </svg>
                    <a href="tel:{{ block.settings.phone | replace: ' ', '' | replace: '(', '' | replace: ')', '' | replace: '-', '' }}">
                      {{ block.settings.phone }}
                    </a>
                  </div>
                {% endif %}

                {% if block.settings.hours != blank %}
                  <div class="location-card__hours">
                    <svg class="location-card__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12,6 12,12 16,14"/>
                    </svg>
                    <div class="location-card__hours-content">
                      {{ block.settings.hours | newline_to_br }}
                    </div>
                  </div>
                {% endif %}

                <div class="location-card__actions">
                  {% if block.settings.google_maps_url != blank %}
                    <a href="{{ block.settings.google_maps_url }}" 
                       target="_blank" 
                       class="location-card__button location-card__button--directions">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                        <circle cx="12" cy="10" r="3"/>
                      </svg>
                      Get Directions
                    </a>
                  {% endif %}
                  
                  {% if block.settings.order_url != blank %}
                    <a href="{{ block.settings.order_url }}" 
                       class="location-card__button location-card__button--order">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="9" cy="21" r="1"/>
                        <circle cx="20" cy="21" r="1"/>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                      </svg>
                      Order Now
                    </a>
                  {% endif %}
                </div>

                {% if block.settings.special_note != blank %}
                  <div class="location-card__note">
                    {{ block.settings.special_note }}
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_contact_form %}
      <div class="locations-contact">
        <h2 class="locations-contact__title">Questions About Our Locations?</h2>
        <p class="locations-contact__description">
          Get in touch with us for more information about our stores, hours, or services.
        </p>
        <a href="/pages/contact" class="locations-contact__button btn btn--primary">
          Contact Us
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.locations-section {
  padding: 4rem 0;
  background: #f8f8f8;
}

.locations-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.locations-header {
  text-align: center;
  margin-bottom: 4rem;
}

.locations-title {
  font-size: 3rem;
  font-weight: bold;
  color: #333;
  margin-bottom: 1rem;
}

.locations-description {
  font-size: 1.2rem;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.locations-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
  margin-bottom: 4rem;
}

.location-card {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.location-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0,0,0,0.15);
}

.location-card__image {
  width: 100%;
  height: 200px;
  overflow: hidden;
}

.location-card__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.location-card:hover .location-card__image img {
  transform: scale(1.05);
}

.location-card__content {
  padding: 2rem;
}

.location-card__name {
  font-size: 1.5rem;
  font-weight: bold;
  color: #333;
  margin-bottom: 1.5rem;
}

.location-card__address,
.location-card__phone,
.location-card__hours {
  display: flex;
  align-items: flex-start;
  margin-bottom: 1rem;
  color: #666;
}

.location-card__icon {
  margin-right: 0.75rem;
  margin-top: 0.125rem;
  flex-shrink: 0;
  color: #ff6600;
}

.location-card__phone a {
  color: #666;
  text-decoration: none;
  transition: color 0.2s ease;
}

.location-card__phone a:hover {
  color: #ff6600;
}

.location-card__hours-content {
  line-height: 1.4;
}

.location-card__actions {
  display: flex;
  gap: 1rem;
  margin: 2rem 0 1rem;
}

.location-card__button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border-radius: 6px;
  text-decoration: none;
  font-weight: bold;
  transition: all 0.3s ease;
  flex: 1;
  justify-content: center;
}

.location-card__button--directions {
  background: #f0f0f0;
  color: #333;
  border: 2px solid #ddd;
}

.location-card__button--directions:hover {
  background: #e0e0e0;
  border-color: #ccc;
}

.location-card__button--order {
  background: #ff6600;
  color: white;
  border: 2px solid #ff6600;
}

.location-card__button--order:hover {
  background: #e55a00;
  border-color: #e55a00;
}

.location-card__note {
  background: #fff3e0;
  padding: 1rem;
  border-radius: 6px;
  border-left: 4px solid #ff6600;
  font-size: 0.9rem;
  color: #666;
  margin-top: 1rem;
}

.locations-contact {
  text-align: center;
  background: white;
  padding: 3rem;
  border-radius: 12px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
}

.locations-contact__title {
  font-size: 2rem;
  font-weight: bold;
  color: #333;
  margin-bottom: 1rem;
}

.locations-contact__description {
  font-size: 1.1rem;
  color: #666;
  margin-bottom: 2rem;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}

.locations-contact__button {
  display: inline-block;
  padding: 1rem 2rem;
  background: #ff6600;
  color: white;
  text-decoration: none;
  border-radius: 6px;
  font-weight: bold;
  transition: background-color 0.3s ease;
}

.locations-contact__button:hover {
  background: #e55a00;
}

@media (max-width: 768px) {
  .locations-title {
    font-size: 2rem;
  }
  
  .locations-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .location-card__content {
    padding: 1.5rem;
  }
  
  .location-card__actions {
    flex-direction: column;
  }
  
  .locations-contact {
    padding: 2rem;
  }
}
</style>

{% comment %} Local Business Schema {% endcomment %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "{{ shop.name }}",
  "url": "{{ shop.url }}",
  "logo": "{{ shop.brand.logo | image_url }}",
  "location": [
    {% for block in section.blocks %}
      {% if block.type == 'location' %}
        {
          "@type": "Place",
          "name": {{ block.settings.name | json }},
          "address": {
            "@type": "PostalAddress",
            "streetAddress": {{ block.settings.address | json }}
          },
          "telephone": {{ block.settings.phone | json }},
          "openingHours": {{ block.settings.hours | strip_html | json }}
        }{% unless forloop.last %},{% endunless %}
      {% endif %}
    {% endfor %}
  ]
}
</script>

{% schema %}
{
  "name": "Locations",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Our Locations",
      "label": "Section title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section description"
    },
    {
      "type": "checkbox",
      "id": "show_contact_form",
      "default": true,
      "label": "Show contact section"
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "Location",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Location name",
          "default": "WTF Cape Coral"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Location image"
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Address",
          "default": "1520 SE 46th Ln, Unit B\nCape Coral, FL 33904"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone number",
          "default": "(239) 955-0314"
        },
        {
          "type": "textarea",
          "id": "hours",
          "label": "Hours",
          "default": "Monday - Sunday\n8:00 AM - 10:00 PM"
        },
        {
          "type": "url",
          "id": "google_maps_url",
          "label": "Google Maps URL"
        },
        {
          "type": "url",
          "id": "order_url",
          "label": "Order online URL",
          "default": "/pages/order"
        },
        {
          "type": "textarea",
          "id": "special_note",
          "label": "Special note or announcement"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Locations",
      "blocks": [
        {
          "type": "location"
        }
      ]
    }
  ]
}
{% endschema %}
